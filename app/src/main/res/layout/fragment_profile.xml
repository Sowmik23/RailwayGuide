<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <!--<ScrollView-->

    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->



    <LinearLayout

        android:paddingBottom="30dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">


        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:foregroundGravity="top"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="top|center"
                android:src="@drawable/ic_person_profile"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="#ff33"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="50sp"
                android:fontFamily="cursive"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="#141314"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:fontFamily="serif"
                android:textSize="40sp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:id="@+id/nid"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="23dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_phone_android_black_24dp"/>
                <TextView
                    android:textColor="#1C1B1D"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile : "
                    android:textSize="22sp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:id="@+id/mid"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mail_outline_black_24dp"/>
                <TextView
                    android:textColor="#2D292E"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:textSize="22sp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:id="@+id/eid"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_location_city_black_24dp"/>
                <TextView
                    android:textColor="#2F2C30"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address : "
                    android:textSize="22sp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:id="@+id/aid"
                    />
            </LinearLayout>


            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"

                android:textAllCaps="false"
                android:text="My Travel History"
                android:id="@+id/historybuttonid"
                android:background="@drawable/button_shape"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed"

                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:textStyle="bold|italic"
                />

        </LinearLayout>

    </LinearLayout>

    <!--</ScrollView>-->


</ScrollView>